{
  "c4-architecture": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "promptTriggers": {
      "keywords": [
        "c4",
        "c4 model",
        "architecture diagram",
        "system architecture",
        "architecture documentation",
        "plantuml",
        "mermaid",
        "context diagram",
        "container diagram",
        "component diagram",
        "code diagram",
        "system context",
        "microservices architecture",
        "system design",
        "architecture design",
        "software architecture",
        "structurizr"
      ],
      "intentPatterns": [
        "(create|generate|build|make|design).*?(architecture|diagram|c4)",
        "(document|explain|describe|show).*?(system|architecture|structure)",
        "(need|want|should).*?(architecture|diagram|c4)",
        "how.*?(document|visualize|diagram).*?(system|architecture)",
        "C4.*(context|container|component|code)",
        "(system|architecture).*(context|container|component)",
        "(draw|sketch|model).*?(architecture|system)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "**/*.puml",
        "**/*.plantuml",
        "**/*.mmd",
        "**/diagrams/**/*",
        "**/architecture/**/*",
        "**/docs/architecture/**/*",
        "**/architecture.md",
        "**/ARCHITECTURE.md",
        "**/ADR-*.md",
        "**/adr-*.md"
      ],
      "pathExclusions": [
        "**/node_modules/**",
        "**/.git/**",
        "**/dist/**",
        "**/build/**"
      ],
      "contentPatterns": [
        "@startuml",
        "C4Context",
        "C4Container",
        "C4Component",
        "C4Deployment",
        "!include.*C4",
        "```mermaid\\s+C4",
        "System_Boundary",
        "Container\\(",
        "Component\\("
      ]
    }
  }
}
